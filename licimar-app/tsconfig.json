{
  "compilerOptions": {
    "target": "ES2017", // Mantém compatibilidade com Node.js
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false, // Permite gerar arquivos .js ao compilar
    "esModuleInterop": true,
    "module": "commonjs", // Compatível com Node.js
    "moduleResolution": "node", // Resolve módulos no estilo Node.js
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "prisma/**/*.ts" // Inclui scripts TypeScript na pasta prisma
  ],
  "exclude": ["node_modules"]
}